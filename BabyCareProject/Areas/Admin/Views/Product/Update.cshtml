@model UpdateProductDto
@{
    ViewData["Title"] = "Ders Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container top-entete">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-success" style="line-height:15px"><i class="fa-solid fa-edit me-2"></i>Ders Güncelleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id"  />
        <label class="form-label">Ders Görseli</label>
        <input type="file" asp-for="@Model.ImageFile" class="form-control" />
        <br />
        <label class="form-label">Başlık</label>
        <input type="text" class="form-control" asp-for="@Model.Title" />
        <br />
        <label class="form-label">Açıklama</label>
        <input type="text" class="form-control" asp-for="@Model.Description" />
        <br />
        <label class="form-label">Fiyat</label>
        <input type="text" class="form-control" asp-for="@Model.Price" />
        <br />
        <label class="form-label">Eğitmen</label>
        @Html.DropDownListFor(prop => prop.InstructorName, (List<SelectListItem>)ViewBag.Teachers, new { @class = "form-control" })
        <br />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-edit me-1"></i>
                Güncelle
            </button>
        </div>
    </form>
</div>


