@model UpdateProductDto
@{
    ViewData["Title"] = "Ders Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container top-entete">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-success" style="line-height:15px"><i class="fa-solid fa-edit me-2"></i>Ders Güncelleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id"  />
        <input type="hidden" asp-for="@Model.ImageUrl" />
        <span class="text-danger my-1" asp-validation-for="@Model.ImageUrl"></span>  <br />
        <label class="form-label">Ders Görseli</label>
        <input type="file" asp-for="@Model.ImageFile" class="form-control" placeholder="Resim seçiniz"/>
        <br />
        <label class="form-label">Ders Adı</label>
        <input type="text" class="form-control" asp-for="@Model.Title"  placeholder="Ders adını giriniz"/>
        <span class="text-danger my-1" asp-validation-for="@Model.Title"></span>  <br />
        <br />
        <label class="form-label">Açıklama</label>
        <textarea type="text" class="form-control" asp-for="@Model.Description" placeholder="Ders hakkında küçük bir açıklama yazınız"></textarea>
        <span class="text-danger my-1" asp-validation-for="@Model.Description"></span>  <br />
        <br />
        <label class="form-label">Ücret</label>
        <input type="text" class="form-control" asp-for="@Model.Price" placeholder="Dersin ücreti ne kadar?"/>
        <span class="text-danger my-1" asp-validation-for="@Model.Price"></span>  <br />
        <br />
        <label class="form-label">Eğitmen</label>
        @Html.DropDownListFor(prop=>prop.InstructorName, (List<SelectListItem>)ViewBag.Teachers, new {@class="form-control"})
        <span class="text-danger my-1" asp-validation-for="@Model.InstructorName"></span> <br />
        <br />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-edit me-1"></i>
                Güncelle
            </button>
        </div>
    </form>
</div>


