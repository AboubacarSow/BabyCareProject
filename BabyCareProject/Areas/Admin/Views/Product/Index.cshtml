@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>N°</th>
            <th>Urun Resimi</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Eğitmen</th>
            <th>Fıyat</th>
            <th>Işlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@product.ImageUrl" style="width:75px;height:75px; border-radius:50%" /></td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.InstructorName</td>
                <td>@product.Price</td>
                <td >
                    <div class="btn-group">
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" asp-area="Admin" class="btn btn-outline-danger">Sil</a>
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" asp-area="Admin" class="btn btn-outline-success">Güncelle</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>
<a asp-action="Create" asp-controller="Product" asp-area="Admin" class="btn btn-outline-primary">Ekle</a>

