@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
 
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container top-entete">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-table-list me-4"></i>Dersler </h4>
        </div>
        <a href="/Admin/Product/Create" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-1"></i>Yeni Ders Ekle
          </a>
      
    </div>
</div>


<div class=" mb-3 table-responsive tableau mt-3">
<table class="table table-stripped table-hover table-sm">
    <thead class="rounded-3 tableau-header">
        <tr>
            <th>N°</th>
            <th>Ders Görseli</th>
            <th>Ders Adı</th>
            <th>Açıklama</th>
            <th>Eğitmen</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@product.ImageUrl" style="width:75px;height:75px; border-radius:50%" /></td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.InstructorName</td>
                <td>@product.Price</td>
                <td >
                    <div>
                        <a href="/Admin/Product/Delete/@product.Id" class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash me-1"></i>
                            Sil</a>
                        <a href="/Admin/Product/Update/@product.Id" class="btn btn-outline-success">
                             <i class="fa-solid fa-edit me-1"></i>
                            Güncelle
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>
</div>

