@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
 
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container top-entete">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-list-ul me-4"></i>Dersler </h4>
        </div>
        <a href="/Admin/Product/Create" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-1"></i>Yeni Ders Ekle
          </a>
      
    </div>
</div>

@if(Model.Count==0){
    <div class="alert alert-info mt-3 text-center" role="alert">
        <i class="fa-solid fa-circle-info me-3"></i>
        <strong>Bilgilendirme!</strong> Henüz Ders Eklenmedi!. 
    </div>
}
else{

    <div class=" mb-3 table-responsive tableau mt-3">
        <table class="table table-stripped table-hover table-sm">
            <thead class="rounded-3 tableau-header">
                <tr>
                    <th>N°</th>
                    <th> Görseli</th>
                    <th> Adı</th>
                    <th>Açıklama</th>
                    <th>Eğitmen</th>
                    <th>Ücret</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td><img src="@product.ImageUrl" style="width:75px;height:75px; border-radius:50%" /></td>
                        <td class="text-primary">@product.Title</td>
                        <td>@product.Description</td>
                        <td class="text-nowrap text-primary">@product.InstructorName</td>
                        <td class="text-nowrap fw-bold">@product.Price ₺</td>
                        <td class="text-nowrap">
                            <div>
                                <a href="/Admin/Product/Delete/@product.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-trash me-1"></i>
                                    Sil</a>
                                <a href="/Admin/Product/Update/@product.Id" class="btn btn-success">
                                    <i class="fa-solid fa-edit me-1"></i>
                                    Güncelle
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

