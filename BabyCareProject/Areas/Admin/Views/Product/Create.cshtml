@model CreateProdutDto
@{
    ViewData["Title"] = "Ders Ekleme";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="container top-entete">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>Ders Ekleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post" enctype="multipart/form-data">
    <label class="form-label">Ders Görseli</label>
    <input type="file" asp-for="@Model.ImageFile" class="form-control" placeholder="Resim seçiniz"/>
    <span class="text-danger my-1" asp-validation-for="@Model.ImageFile"></span>  
    <br />
    <label class="form-label">Ders Adı</label>
    <input type="text" class="form-control" asp-for="@Model.Title"  placeholder="Ders adını giriniz"/>
    <span class="text-danger my-1" asp-validation-for="@Model.Title"></span>  
    <br />
    <label class="form-label">Açıklama</label>
    <textarea type="text" class="form-control" asp-for="@Model.Description" placeholder="Ders hakkında küçük bir açıklama yazınız"></textarea>
    <span class="text-danger my-1" asp-validation-for="@Model.Description"></span>  
    <br />
    <label class="form-label">Ücret</label>
    <input type="text" class="form-control" asp-for="@Model.Price" placeholder="Dersin ücreti ne kadar?"/>
    <span class="text-danger my-1" asp-validation-for="@Model.Price"></span>  
    <br />
    <label class="form-label">Eğitmen</label>
    @Html.DropDownListFor(prop=>prop.InstructorName, (List<SelectListItem>)ViewBag.Teachers, new {@class="form-control"})
    <span class="text-danger my-1" asp-validation-for="@Model.InstructorName"></span>  
        <br />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-plus me-1"></i>
                Kaydet</button>

        </div>
</form>

</div>

