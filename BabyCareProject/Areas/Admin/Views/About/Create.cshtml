@model CreateAboutDto
@{
    ViewData["Title"] = "Hakkımızda Ekleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container top-entete mb-2">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>Hakkımızda Ekleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post">
        <label class="form-label mb-2">Slogan</label>
        <input type="text" asp-for="@Model.Slogan" class="form-control mb-3" placeholder="Slogan Giriniz"/>
        @Html.ValidationMessageFor(a=>a.Slogan,"", new{@class="text-danger my-1"})
        <label class="form-label mb-2">Açıklama</label>
        <textarea class="form-control mb-3" asp-for="@Model.Description" placeholder="Açıklama Giriniz " style="min-height:100px;"></textarea>
        <span class="text-danger my-1" asp-validation-for="@Model.Description"></span>
        <label class="form-label mb-2">Video ID'isi</label>
        <input type="text" asp-for="@Model.VideoID" class="form-control mb-3" placeholder="Video ID Giriniz"/>
        <span class="text-danger my-1" asp-validation-for="@Model.VideoID"></span>
        <label class="form-label mb-2">Özellikler</label>
        <textarea asp-for="@Model.FeatureContent" class="form-control me-2" 
            placeholder="Özellik 1,Özellik 2,Özellik 3,..." style="min-height:80px;">
        </textarea>
        <span class="text-danger my-1" asp-validation-for="@Model.FeatureContent"></span>
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-plus me-1"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>
