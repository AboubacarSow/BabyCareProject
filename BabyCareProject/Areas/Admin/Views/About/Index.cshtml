@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}

<div class="container top-entete">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-table-list me-4"></i>Hakkımızda </h4>
        </div>
        <a href="/Admin/About/Create" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-1"></i>Yenisi Ekle
          </a>
      
    </div>
</div>

@if(Model.Count==0){
<div class="alert alert-info mt-3" role="alert">
    <i class="fa-solid fa-triangle-exclamation me-2"></i>
    <strong>Bilgilendirme!</strong> Hakkımızda bilgisi henüz Yok. 
</div>
}
else{

    <div class=" mb-3 table-responsive tableau mt-3">
        <table class="table table-stripped table-hover table-sm">
            <thead class="rounded-3 tableau-header">
                <tr>
                    <th>N°</th>
                    <th>Slogan</th>
                    <th>Açıklama</th>
                    <th>Özellikler</th>
                    <th>Video</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var about in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td>@about.Slogan</td>
                        <td class="text-primary"> 
                        <button class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="about-@about.Id">
                                    <i class="fa-solid fa-bookmark"></i>
                        </button> 
                        </td>
                        <td>
                            <div class="d-flex justify-content-around">
                                @foreach(var feature in about.Features)
                                {
                                    <span class="badge rounded-pill text-bg-primary">@feature</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a href="@about.VideoUrl" target="_blank" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-video me-1"></i>Video
                            </a>
                        </td>
                        <td class="text-nowrap">
                            <div>
                                <a href="/Admin/About/Delete/@about.Id" class="btn btn-outline-danger">
                                    <i class="fa-solid fa-trash me-1"></i>
                                    Sil
                                </a>
                                <a href="/Admin/About/Update/@about.Id" class="btn btn-outline-success">
                                    <i class="fa-solid fa-edit me-1"></i>
                                    Güncelle
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @foreach(var about in Model)
    {
        <div class="modal fade" id="about-@about.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Açıklama</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="fst-normal">@about.Description</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
