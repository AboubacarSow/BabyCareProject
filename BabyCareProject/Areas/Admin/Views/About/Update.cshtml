@model UpdateAboutDto   
@{
    ViewData["Title"] = "Hakkımızda Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .bar{
        position: relative;
    }
    
    .content{
        overflow-y:hidden;
    }
</style>
<div class="container top-entete bar">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-success" style="line-height:15px"><i class="fa-solid fa-edit me-2"></i>Hakkımızda Güncelleme İşlemi </h4>
        </div>
    </div>
</div>
<div class="container formulaire mt-3 content">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.VideoUrl" />
        <span class="text-danger my-1" asp-validation-for="@Model.VideoUrl"></span>  
        <label class="form-label">Slogan</label>
        <input type="text" asp-for="@Model.Slogan" class="form-control mb-3" placeholder="Slogan Giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.Slogan"></span>    
        <label class="form-label">Açıklama</label>
        <textarea class="form-control mb-3" 
                    asp-for="@Model.Description" placeholder="Açıklama Giriniz "
                  style="min-height: 100px">
         </textarea>
        <label class="form-label">Video ID</label>
        <input type="text" asp-for="@Model.VideoID" class="form-control mb-3" placeholder="Video ID'si Giriniz" />
        <label class="form-label">Özellikler</label>
        <textarea type="text" asp-for="@Model.FeatureContent" class="form-control me-2" style="min-height: 100px"
            placeholder="Özellik 1,Özellik 2,Özellik 3,..."></textarea>
        <div class="d-flex justify-content-around mt-2">
            @foreach(var feature in Model?.Features)
            {
                <span class="badge rounded-pill text-bg-info text-light">@feature</span>
            }   
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-success" type="submit">
                <i class="fa-solid fa-edit me-1"></i>
                Güncelle
            </button>
        </div>
    </form>
</div>