@model CreateContactDto
@{
    ViewData["Title"] = "İletişim Ekleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container top-entete mb-2">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>İletişim Ekleme İşlemi </h4>
        </div>
    </div>
</div>

<div class="container formulaire mt-3">
    <form method="post">
        <label class="form-lable mb-1">Adres</label>
        <input type="text" asp-for="@Model.Address" class="form-control" placeholder="Adres giriniz"/>
        <span class="text-danger my-1" asp-validation-for="@Model.Address"></span>  
        <label class="form-label me-1 mt-3">Mail</label>
        <input type="mail" asp-for="@Model.Email" class="form-control" placeholder="Mail giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.Email"></span>  
        <label class="form-label me-1 mt-3">Tel Numara</label>
        <input type="text" asp-for="@Model.Tel" class="form-control" placeholder="Telefon Numara Giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.Tel"></span>  
        <label class="form-label mb-1 mt-3">Konu</label>
        <input type="text" asp-for="@Model.LocationUrl" class="form-control" placeholder="Konu giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.LocationUrl"></span>  
        <label class="form-label mb-1 mt-3">Harita Linki</label>
        <input type="text" asp-for="@Model.MapUrl" class="form-control" placeholder="Harita linki giriniz" />
        <span class="text-danger my-1" asp-validation-for="@Model.MapUrl"></span>  
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-plus me-2"></i> Kaydet
            </button>
        </div>
    </form>
</div>