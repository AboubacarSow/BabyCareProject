@model List<ResultContactDto>
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}

<div class="container top-entete">
    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-list-ul me-4"></i>İletişimler </h4>
        </div>
        <a href="/Admin/Contact/Create" class="btn btn-outline-primary">
            <i class="fa-solid  fa-plus  me-1"></i>Yeni İletişim Bilgi Ekle
        </a>

    </div>
</div>

@if(Model.Count==0){
    <div class="alert alert-info mt-3 text-center" role="alert">
        <i class="fa-solid fa-circle-info me-3"></i>
        <strong>Bilgilendirme!</strong> İletişim Bilgisi Henüz Yok. 
    </div>
}
else{
    <div class=" mb-3 table-responsive tableau mt-3">
        <table class="table table-stripped table-hover table-sm">
            <thead class="rounded-3 tableau-header">
                <tr>
                    <th>N°</th>
                    <th>Adres</th>
                    <th>Mail</th>
                    <th>Tel No</th>
                    <th>Konu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td class="text-info">
                            @contact.Address
                        </td>
                        <td class="text-primary text-nowrap"> 
                            @contact.Email
                        </td>
                        <td class="text-italic text-nowrap">
                            @contact.Tel
                        </td>
                        <td>
                            <a href="@contact.LocationUrl" target="_blank" class="btn btn-outline-primary text-nowrap">
                                <i class="fa-solid fa-map-location-dot me-1"></i>
                            </a>
                        </td>
                        <td class="text-nowrap">
                                <a href="/Admin/Contact/Delete/@contact.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-trash me-1"></i>
                                    Sil
                                </a>
                                <a href="/Admin/Contact/Update/@contact.Id" class="btn btn-success">
                                    <i class="fa-solid fa-edit me-1"></i>
                                    Güncelle
                                </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}