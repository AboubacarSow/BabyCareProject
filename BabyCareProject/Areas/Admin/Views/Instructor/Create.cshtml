@model CreateInstructorDto
@{
    ViewData["Title"] = "Eğitmen Ekleme";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container top-entete">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-primary" style="line-height:15px"><i class="fa-solid fa-plus me-2"></i>Eğitmen Ekleme İşlemi </h4>
        </div>
    </div>
</div>
<div class="container formulaire mt-3">
    <form method="post" enctype="multipart/form-data">
        <label class="form-label fw-bold my-1">Profil Resmi</label>
        <input type="file" asp-for="@Model.ImageFile" class="form-control"/>
        <span class="text-danger my-1" asp-validation-for="@Model.ImageFile"></span>  
        <br />
        <label class="form-label fw-bold mb-1">Ad</label>
        <input type="text" class="form-control mb-3" asp-for="@Model.FirstName" />
        <span class="text-danger my-1" asp-validation-for="@Model.FirstName"></span>  
         <label class="form-label mb-1">Soyad</label>
        <input type="text" class="form-control mb-3" asp-for="@Model.LastName" />
        <span class="text-danger my-1" asp-validation-for="@Model.LastName"></span>  
        <label class="form-label fw-bold">Başlık</label>
        <input type="text" class="form-control" asp-for="@Model.Title" />
        <span class="text-danger my-1" asp-validation-for="@Model.Title"></span> 
        <br/> 
        <div class="d-flex justify-content-center">
        <button class="btn btn-primary"  type="submit">
            <i class="fa-solid fa-plus me-1"></i>
            Kaydet</button>

        </div>
    </form>

</div>

