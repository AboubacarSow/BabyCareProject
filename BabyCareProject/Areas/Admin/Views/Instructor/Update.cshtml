@model UpdateInstructorDto
@{
    ViewData["Title"] = "Eğitmen Ekleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container top-entete">
    <div class="d-flex justify-content-center">
        <div class="d-flex align-items-center">
            <h4 class="text-success" style="line-height:15px"><i class="fa-solid fa-edit me-2"></i>Eğitmen Ekleme İşlemi </h4>
        </div>
    </div>
</div>
<div class="container formulaire mt-3">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.ImageUrl" />
        <span class="text-danger my-1" asp-validation-for="@Model.ImageUrl"></span>  
        <label class="form-label">Profil Resmi</label>
        <input type="file" asp-for="@Model.ImageFile" class="form-control"/>
        <br />
        <label class="form-label">Ad</label>
        <input type="text" class="form-control" asp-for="@Model.FirstName" />
        <span class="text-danger my-1" asp-validation-for="@Model.FirstName"></span>  
        <br />
        <label class="form-label">Soyad</label>
        <input type="text" class="form-control" asp-for="@Model.LastName" />
        <span class="text-danger my-1" asp-validation-for="@Model.LastName"></span>  
        <br />
        <label class="form-label">Başlık</label>
        <input type="text" class="form-control" asp-for="@Model.Title" />
        <span class="text-danger my-1" asp-validation-for="@Model.Title"></span>  
        <br />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Güncelle</button>
        </div>
    </form>

</div>

